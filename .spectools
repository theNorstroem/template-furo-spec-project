spectools: "1.9.2"
module: "github.com/theNorstroem/template-furo-spec-project"
version: "v1.0.0"
specDir: "./specs"
specFormat: "yaml" #set to yaml or json
dependencies:
  - "git@github.com:theNorstroem/furoBaseSpecs.git v1.10.9" # The importer looks for all **/*.type.spec files recursive The importer looks for all **/*.service.spec files recursive
dependenciesDir: dependencies
muSpec:
  types:
    - "./muspec/**/*types.yaml"
    - "./muspec/*types.yaml"
  services:
    - "./muspec/**/*services.yaml"
    - "./muspec/*services.yaml"
  goPackageBase: "github.com/theNorstroem/template-furo-spec-project/dist/pb/" #this is used to prefix the go package option
  dir: "muspec"
commands: #camelCase is not allowed, command scripts can only be executed from a flow
  gen_protoc_commands: "./scripts/protoc/protoc.sh"
  gen_transcoder: "./scripts/grpcgateway/gateway.sh"
  exec_protoc_messages : "scripts/proto2DomainTypes.sh" # sript is generated by gen_protoc_commands
  exec_protoc_services : "scripts/proto2DomainServices.sh" # sript is generated by gen_protoc_commands
flows:
  default: #full spectrum in der prototyping phase
    - muSpec2Spec
    - genServiceProtos
    - genMessageProtos
    - gen_protoc_commands
    - exec_protoc_messages
    - exec_protoc_services
    - gen_transcoder
    - genEsModule
  transcoder:
    - gen_protoc_commands
    - exec_protoc_messages
    - exec_protoc_services
    - gen_transcoder
  prototyping:
    - clearAllProtos
    - clearAllSpecs
    - muSpec2Spec
    - genServiceProtos
    - genMessageProtos
    - gen_protoc_commands
    - exec_protoc_messages
    - exec_protoc_services
    - gen_transcoder
    - genEsModule
build:
  proto:
    targetDir: "dist/proto/" #Hint: add this to your proto include path
  esModule:
    targetFile: "dist/env.js"
